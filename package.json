{
  "name": "electron",
  "productName": "electron",
  "version": "1.0.0",
  "description": "My Electron application description",
  "main": "dist/main/main.cjs",
  "type": "module",
  "config": {
    "forge": "./forge.config.mts"
  },
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx .",
    "build:vite": "vite build --config vite.renderer.config.mts && vite build --config vite.main.config.mts && vite build --config vite.preload.config.mts",
    "build:electron": "electron-builder --win portable --x64",
    "build": "bun run build:vite && bun run build:electron"
  },
  "keywords": [],
  "author": {
    "name": "MHgh0st",
    "email": "mhgh0st.982@gmail.com"
  },
  "license": "MIT",
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "electron-winstaller"
    ]
  },
  "build": {
    "appId": "com.example.ProcessMiningGraph",
    "productName": "Process Mining Graph",
    "files": [
      "dist/**"
    ],
    "extraResources": [
      {
        "from": "resources/processor.exe",
        "to": "processor.exe"
      }
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "src/assets/Icon.ico"
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.10.2",
    "@electron-forge/plugin-fuses": "^7.10.2",
    "@electron-forge/plugin-vite": "^7.10.2",
    "@electron/fuses": "^1.8.0",
    "@types/d3-scale": "^4.0.9",
    "@types/electron-squirrel-startup": "^1.0.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/react-virtualized": "^9.22.3",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitejs/plugin-react": "^5.0.4",
    "electron": "38.2.2",
    "electron-builder": "^26.0.12",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.32.0",
    "typescript": "~4.5.5",
    "vite": "^5.4.20"
  },
  "dependencies": {
    "@dagrejs/dagre": "^1.1.5",
    "@heroui/accordion": "^2.2.24",
    "@heroui/button": "^2.2.27",
    "@heroui/card": "^2.2.25",
    "@heroui/checkbox": "^2.3.27",
    "@heroui/chip": "^2.2.22",
    "@heroui/date-picker": "^2.3.28",
    "@heroui/divider": "^2.2.20",
    "@heroui/form": "^2.1.27",
    "@heroui/input": "^2.4.28",
    "@heroui/number-input": "^2.0.18",
    "@heroui/popover": "^2.3.27",
    "@heroui/select": "^2.4.28",
    "@heroui/system": "^2.4.23",
    "@heroui/theme": "^2.4.23",
    "@heroui/tooltip": "^2.2.24",
    "@internationalized/date": "^3.10.0",
    "@tailwindcss/vite": "^4.1.14",
    "@types/moment-jalaali": "^0.7.9",
    "@xyflow/react": "^12.8.6",
    "d3-scale": "^4.0.2",
    "electron-squirrel-startup": "^1.0.1",
    "elkjs": "^0.11.0",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.553.0",
    "moment-jalaali": "^0.10.4",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-virtualized": "^9.22.6",
    "tailwindcss": "^4.1.14"
  }
}
